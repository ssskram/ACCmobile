@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}
<br>
<br>
<div class="row col-centered">
<div class="col-md-12 text-center">
    <p class="text-info">
    </p>
    <h4 class="text-info">
        Please confirm your email address:  
    </h4>
    <h3>
        <strong>@Model.Email</strong>
    </h3>
<br>
    <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        @Html.HiddenFor(model => model.Email)
        <button type="submit" class="btn btn-default">Looks good &raquo;</button>
    </form>
    <br/>
    <a class="btn btn-default" style="-moz-box-shadow: 0 0 0 0; -webkit-box-shadow: 0 0 0 0; box-shadow: 0 0 0 0; font-size: 12px; " href="/Account/Login">Try again &raquo;</a>
</div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
