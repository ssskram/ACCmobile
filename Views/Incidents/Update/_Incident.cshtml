@model GetIncident
<form asp-controller="UpdateIncident" asp-action="UpdateIncident" method="post">
<div class="form-group">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Owner's last name</div>
        <input asp-for="OwnersLastName" class="form-control"></input>
    </div>
</div>

<div class="form-group">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Owner's first name</div>
        <input asp-for="OwnersFirstName" class="form-control"></input>
    </div>
</div>

<div class="form-group" style="margin-bottom: 10px;">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Owner's telephone number</div>
        <input asp-for="OwnersTelephoneNumber" class="form-control"></input>
    </div>
</div>

<div class="form-group" style="margin-bottom: 5px;">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Call origin</div>
        <select asp-for="CallOrigin" data-style="btn-info" class="selectpicker form-control" data-dropup-auto="false" title="">
            <option selected>@Model.CallOrigin</option>
            <option data-divider="true"></option>
            <option>911</option>
            <option>311</option>
            <option>Office</option>
            <option>Police</option>
            <option>Other</option>
        </select>
    </div>
</div>

<div class="form-group" style="margin-bottom: 5px;">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Reason(s) for visit</div>
        <select asp-for="ReasonForVisit" data-style="btn-info" multiple class="selectpicker form-control" title="" data-selected-text-format="count > 4" data-dropup-auto="false" id="reasonrelay" required="true">
            <option selected>@Model.ReasonForVisit</option>
            <option data-divider="true"></option>
            <option value="id">Barking</option>
            <option value="id">FWS</option>
            <option value="id">Animal waste in yard</option>
            <option value="id">Animal waste off property</option>
            <option value="id">Feeding wildlife</option>
            <option value="id">Count cats</option>
            <option value="id">Count animals</option>
            <option value="id">Feeding stray cats</option>
            <option value="id">Running at large</option>
            <option value="id">Other</option>
        </select>
    </div>
</div>

<div class="form-group" style="margin-bottom: 10px;">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">ADV. PGH Code(s)</div>
        <select asp-for="PGHCode" data-style="btn-info" multiple class="selectpicker form-control" data-selected-text-format="count > 4" data-dropup-auto="false" id="coderelay" data-size="7" Title="">
            <option selected>@Model.PGHCode</option>
            <option data-divider="true"></option>
            <option value="id">633.02a</option>
            <option value="id">633.03</option>
            <option value="id">633.05</option>
            <option value="id">633.07a</option>
            <option value="id">633.09a</option>
            <option value="id">633.09b</option>
            <option value="id">633.09c</option>
            <option value="id">633.10a</option>
            <option value="id">633.10b</option>
            <option value="id">633.12</option>
            <option value="id">633.23</option>
            <option value="id">633.24</option>
        </select>
    </div>
</div>

<div class="form-group">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Citation number</div>
        <input asp-for="CitationNumber" class="form-control"></input>
    </div>
</div>

<div class="form-group">
    <div class="col-md-12">
        <div style="margin-left: 5px; padding-top: 5px;">Comments</div>
        <textarea rows="3" asp-for="Comments" class="form-control" onkeyup="textAreaAdjust(this)"></textarea>
    </div>
</div>
<div class="text-center">
<input style="width: 60%; margin-top: 20px;" type="submit" value="Save" class="btn btn-default overlaytrigger" disabled/>
</div>
</form>
