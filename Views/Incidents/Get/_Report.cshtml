@model GetIncident
<div id="id" hidden>@Model.IncidentID</div>
<br>
<h4 class="incidentheader" id="address">@Model.Address</h4>
<table class="table" id="incidenttable">
  <tbody>
    <tr>
      <th style="width: 30%; border:none;" scope="row">Incident Date</th>
      <td style="border:none;">@Model.Date</td>
    </tr>
    <tr>
      <th scope="row">Owners Name</th>
      <td>@Model.OwnersFirstName @Model.OwnersLastName</td>
    </tr>
    <tr>
      <th scope="row">Telephone Number</th>
      <td>@Model.OwnersTelephoneNumber</td>
    </tr>
    <tr>
      <th scope="row">Call Origin</th>
      <td>@Model.CallOrigin</td>
    </tr>
    <tr>
      <th scope="row">Reason(s) For Visit</th>
      <td>@Model.ReasonForVisit</td>
    </tr>
    <tr>
      <th scope="row">PGH Code(s)</th>
      <td>@Model.PGHCode</td>
    </tr>
    <tr>
      <th scope="row">Citation Number</th>
      <td>@Model.CitationNumber</td>
    </tr>
    <tr>
      <th scope="row">Submitted by</th>
      <td>@Model.SubmittedBy</td>
    </tr>
  </tbody>
</table>

<!-- hidden form fields for new animal put -->
<input asp-for="IncidentID" value="@Model.IncidentID" hidden></input>
<input asp-for="Address" value="@Model.Address" hidden></input>
<input asp-for="Coords" value="@Model.Coords" hidden></input>
<input asp-for="OwnersFirstName" value="@Model.OwnersFirstName" hidden></input>
<input asp-for="OwnersLastName" value="@Model.OwnersLastName" hidden></input>
<input asp-for="ReasonForVisit" value="@Model.ReasonForVisit" hidden></input>
<textarea asp-for="Comments" value="@Model.Comments" hidden></textarea>

<a class="btn btn-link" id="incidentbutton">> Edit incident</a>
<input class="btn btn-link overlaytrigger" type="submit" value="> Add animal" id="animaladd"></input>