@{
    ViewData["Title"] = "Advisory data";
}
<!-- js to pass multiple values from dropdown ("relay" fields) to hidden string field for posting -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript">
 $(document).ready(function () {
    $('#button').click(function(){
        $('#reason').val( $('#reasonrelay').val() );
        $('#code').val( $('#coderelay').val() );
    });
    });
</script>
<div class="row">
  <div class="col-sm-12">
        <h3>Advisory information:</h3>
        <div>@Html.Partial("AdvisoryGeneralInfo")</div>
  </div>
</div>