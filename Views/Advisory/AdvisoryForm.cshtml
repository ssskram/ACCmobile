@{
    ViewData["Title"] = "Advisory data";
}
<!-- js to pass multiple values from dropdown ("relay" fields) to hidden string field for posting -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript">
 $(document).ready(function () {
    $('#button').click(function(){
        $('#reason').val( $('#reasonrelay').val() );
        $('#code').val( $('#coderelay').val() );
    });
    });
</script>
<form asp-controller="Advisory" asp-action="Create" method="post">

<div class="row">
  <div class="col-sm-12">
        <h3>Describe the incident</h3>
        <div>@Html.Partial("AdvisoryGeneralInfo")</div>
  </div>
</div>

<div class="col-md-12 text-center" style="margin-top: 15px; margin-bottom: 10px">
    <input style="padding: 5px 25px;" type="submit" value="Next &raquo;" class="btn btn-default" id="button"/>
</div>
</form>