@{
    ViewData["Title"] = "New incident";
    Layout = "~/Views/Shared/_AddressLayout.cshtml";
}
<link rel="stylesheet" href="~/css/address.css">

<form asp-controller="Address" asp-action="Next" method="post" id="AddressForm">
<div class="row">
  <div class="col-md-12" id="column">
      <div class="addresscontainer" id="addresscontainer">
      <div>
            <h3 style="margin-left: 30px; color:#fffaee;">First, enter a valid address</h3>
            <div>@Html.Partial("_Address")</div> 
            <div class="col-md-12 text-center" style="margin-top: 20px;">
              <input id="submit" type="submit" value="Next &raquo;" class="btn btn-default" style="display:none;"/>
            </div>
      </div>
    </div>
    <div id="map"></div>
    <div id="infowindow-content">
      <img src="" width="16" height="16" id="place-icon">
      <span id="place-name"  class="title"></span><br>
      <span id="place-address"></span>
    </div>
  </div>
</div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript" src="~/js/addressform.js"></script>
<script src=@ViewData["apistring"] async defer ></script>