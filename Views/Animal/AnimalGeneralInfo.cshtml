@model AnimalGeneralInfo

<form asp-controller="Animal" asp-action="Create" method="post">
<div class="container">
  <div class="row">
    <div class="col-md-6">
        <div class="form-group" style="margin-bottom: 10px;">
            <input asp-for="AnimalName" class="form-control"></input>
            <span asp-validation-for="AnimalName" class="text-danger" />
        </div>
        <div class="form-group" style="margin-bottom: 5px;">
            <select asp-for="Type" data-style="btn-info" class="selectpicker form-control" title="Type" data-dropup-auto="false">
                <option>Dog</option>
                <option>Cat</option>
                <option>Other</option>
            </select>    
            <span asp-validation-for="Type" class="text-danger" />
        </div>
        <div class="form-group" style="margin-bottom: 5px;">
            <select asp-for="Breed" data-style="btn-info" multiple class="selectpicker form-control" title="Breed" data-selected-text-format="count > 3" data-dropup-auto="false">
                <optgroup label="Cats">
                    <option>Domestic Short Hair</option>
                    <option>Domestic Long Hair</option>
                    <option>Feral</option>
                    <option>Tabby</option>
                    <option>Siamese</option>
                </optgroup>
                <optgroup label="Dogs">
                    <option>Mix</option>
                    <option>Pit Bull</option>
                    <option>Terrier</option>
                    <option>German Shepherd</option>
                    <option>Rottweiler</option>
                    <option>Bulldog</option>
                    <option>Beagle</option>
                    <option>Poodle</option>
                    <option>Yorkie</option>
                    <option>Boxer</option>
                    <option>Great Dane</option>
                    <option>Doberman</option>
                    <option>Australian Shepherd</option>
                    <option>Shih Tzu</option>
                    <option>Pomeranian</option>
                    <option>Spaniel</option>
                </optgroup>
            </select>
            <span asp-validation-for="Breed" class="text-danger" />
        </div>
        <div class="form-group" style="margin-bottom: 5px;">
            <select asp-for="Coat" data-style="btn-info" multiple class="selectpicker form-control" title="Coat" data-selected-text-format="count > 3" data-dropup-auto="false">
                <optgroup label="Cats">
                    <option>Tabby</option>
                    <option>Calico</option>
                </optgroup>
                <optgroup label="Dogs">
                    <option>Brindle</option>
                </optgroup>
                <optgroup label="Universal">
                    <option>Black</option>
                    <option>White</option>
                    <option>Gray</option>
                    <option>Brown</option>
                    <option>Tan</option>
                    <option>Blue</option>
                    <option>Orange</option>
                    <option>Yellow</option>
                    <option>Golden</option>
                </optgroup>
            </select>
            <span asp-validation-for="Coat" class="text-danger" />
        </div>
        <div class="form-group" style="margin-bottom: 10px;">
            <select asp-for="Sex" data-style="btn-info" class="selectpicker form-control" title="Sex" data-dropup-auto="false">
                <option>Male</option>
                <option>Female</option>
                <option>Other</option>
            </select>
            <span asp-validation-for="Sex" class="text-danger" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <input asp-for="Age" class="form-control"></input>
            <span asp-validation-for="Age" class="text-danger" />
        </div>
        <div class="form-group">
            <input asp-for="LicenseNumber" class="form-control"></input>
            <span asp-validation-for="LicenseNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <input asp-for="LicenseYear" class="form-control"></input>
            <span asp-validation-for="LicenseYear" class="text-danger" />
        </div>
        <div class="form-group">
            <input asp-for="RabbiesVacNo" class="form-control"></input>
            <span asp-validation-for="RabbiesVacNo" class="text-danger" />
        </div>
        <div class="form-group">
            <input asp-for="RabbiesVacExp" class="form-control"></input>
            <span asp-validation-for="RabbiesVacExp" class="text-danger" />
        </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
        <div class="col-md-12">
            <textarea rows="3" asp-for="Veterinarian" class="form-control" onkeyup="textAreaAdjust(this)"></textarea>
            <span asp-validation-for="Veterinarian" class="text-danger" />
        </div>
    </div>
  </div>
</div>

<input asp-for="AccessToken" type="hidden"></input>
<input asp-for="AdvisoryID" type="hidden"></input>
<input asp-for="AddressID" type="hidden"></input>

<div class="col-md-12 text-center" style="margin-top: 15px; margin-bottom: 10px">
    <input style="padding: 5px 25px;" type="submit" value="Submit" class="btn btn-default" />
</div>
</form>